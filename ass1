st = 'Print only the words that start with s in this sentence'

# Using for loop, split(), and if to print words that start with 's'
for word in st.split():
    if word.lower().startswith('s'):
        print(word)




# Using range() to print all even numbers from 0 to 10
for num in range(0, 11, 2):
    print(num)





# List Comprehension to create a list of numbers divisible by 3 between 1 and 50
div_by_3 = [num for num in range(1, 51) if num % 3 == 0]
print(div_by_3)






st = 'Print every word in this sentence that has an even number of letters'

# Go through each word and print "even!" if the word's length is even
for word in st.split():
    if len(word) % 2 == 0:
        print("even!")



# FizzBuzz program
for num in range(1, 101):
    if num % 3 == 0 and num % 5 == 0:
        print("FizzBuzz")
    elif num % 3 == 0:
        print("Fizz")
    elif num % 5 == 0:
        print("Buzz")
    else:
        print(num)










st = 'Create a list of the first letters of every word in this string'

# List Comprehension to get the first letter of each word
first_letters = [word[0] for word in st.split()]
print(first_letters)

